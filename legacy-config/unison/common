# Roots of the synchronization

# If any new preferences are added by Unison (e.g. 'ignore'
# preferences added via the graphical UI), then store them in the
# file 'common' rathen than in the top-level preference file
addprefsto = common

addversionno = true

# Names and paths to ignore

# It's superfluous to backup git directory
ignore = Name .git

# Projectile file
ignore = Name .projectile

# Haskell Building Infrastructure
ignore = Name dist
ignore = Name .cabal*
ignore = Name .stack*

# Object files
ignore = Name *.o
ignore = Name *.hi
ignore = Name *.pyc
ignore = Name *.agdai

# Backups
ignore = Name *~
ignore = Name .*~
ignore = Name *.old

# Lock files
ignore = Name #*

# LaTeX stuff
ignore = Name *.vrb
ignore = Name *.fdb_latexmk
ignore = Name *.fls
ignore = Name *.log
ignore = Name *.aux
ignore = Name *.toc
ignore = Name *.blg
ignore = Name *.idx
ignore = Name *.ptb
ignore = Name *.snm
ignore = Name *.out

# OwnCloud reminescents
ignore = Name .csync_journal*
ignore = Name .owncloud*
ignore = Name Cache
ignore = Name cache
ignore = Name ._sync*
